<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:columnCount="2"
        app:rowCount="4"
        >

        <Button
            android:id="@+id/hello"
            android:text="Hello"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:onClick="buttonTapped"
            />
        <Button
            android:id="@+id/howareyou"
            android:text="How are &#10;You?"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:onClick="buttonTapped"
            />
        <Button
            android:id="@+id/goodevening"
            android:text="Gd Evening"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:onClick="buttonTapped"
            />
        <Button
            android:id="@+id/please"
            android:text="Please"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:onClick="buttonTapped"
            />
        <Button
            android:id="@+id/mynameis"
            android:text="My name is"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:onClick="buttonTapped"
            />
        <Button
            android:id="@+id/doyouspeakenglish"
            android:text="Do you &#10;speak English?"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:onClick="buttonTapped"
            />
        <Button
            android:id="@+id/welcome"
            android:text="Welcome"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:onClick="buttonTapped"
            />
        <Button
            android:id="@+id/ilivein"
            android:text="I live in"
            app:layout_gravity="fill"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:layout_margin="5sp"
            android:onClick="buttonTapped"
            />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>